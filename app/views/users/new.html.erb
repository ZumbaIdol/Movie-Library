<h1>New User Sign Up</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <p class="error"><%= msg %></p>
  <% end %>
<% end %>

<%= form_with model: @user, local: true do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label "Email:" %>
  <%= f.email_field :email %>
  <br><br>
  <%= f.label "Password:" %>
  <%= f.password_field :password %>
  <br><br>
  <%= f.label "Password Confirmation:" %>
  <%= f.password_field :password_confirmation %><br><br>
<%= f.submit "Sign Up" %>
<% end %>

<h4>Or <%= link_to("Log In", '/login') %></h4>
<h4>Or <%= link_to("Log in with Facebook", '/auth/facebook') %></h4>
