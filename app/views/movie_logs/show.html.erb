<h2><%= @comment.user.name %></h2>
<h3><%= @comment.movie.title %></h3>

<div>
  <h3>Comment:</h3>
  <ul>
    <li>
      <%= @comment.user.name%> says:
      <strong><%= @comment.comments %></strong><br><br>
      <%= link_to "Delete", movie_movie_log_path(@comment), method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete this comment?" } %>
      <%= link_to 'Back', movie_logs_path %>
    </li>
  </ul>
</div>