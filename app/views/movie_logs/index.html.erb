<% if @movie %>
  <h1>Comments about <%= @movie.title %></h1>
<% else %>
  <h1>All Movies</h1>
<% end %>

<ul>
  <% @comments.each do |comment| %>
    <li>
      <%= comment.user.name %> saw <%=comment.movie.title %> and commented <%= user.comment %>

      <%= link_to "View Comment", movie_log_path(comment.id) %>

      <%= link_to "Edit Comment", edit_movie_log_path(comment) if comment.user == current_user %>
    </li>
  <% end %>
</ul>
